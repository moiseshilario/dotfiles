[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  pager = diff-so-fancy | less --tabs=4
[commit]
  template = ~/.gitmessage
[alias]
  # helpers
  delete-merged = !git branch --merged | grep -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red
[color "status"]
  added = cyan bold
  branch = cyan bold
  changed = magenta bold
  deleted = red bold
  untracked = yellow bold
